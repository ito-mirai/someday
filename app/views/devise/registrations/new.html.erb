<%= render partial: "shared/header" %>
<main>
  <h1 class="heading1">―― 新規登録 ――</h1>
  <div class="user_form_area">
    <div class="user_form_container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:"user_form"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="user_form_field">
          <%= f.label :username, "ユーザー名", class:"user_form_label" %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"user_form_text_field" %>
        </div>

        <div class="user_form_field">
          <%= f.label :email, "メールアドレス", class:"user_form_label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"user_form_text_field" %>
        </div>

        <div class="user_form_field">
          <%= f.label :password, "パスワード", class:"user_form_label" %><br />
          <% if @minimum_password_length %>
          <em class="form_supplement">※<%= @minimum_password_length %>文字以上で入力してください</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"user_form_text_field" %>
        </div>

        <div class="user_form_field">
          <%= f.label :password_confirmation, "パスワード（再確認）", class:"user_form_label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"user_form_text_field" %>
        </div>

        <div class="user_form_action_area">

          <div class="action_btn_area">
            <%= f.submit "新規登録", class:"new_action_btn" %>
          </div>

        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
<%= render partial: "shared/footer" %>


