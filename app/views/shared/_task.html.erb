<div class="shared__task_container">
  <div class="shared__task_group">グループ：
    <%= link_to task.group.group_name, group_path(task.group.id), class:"shared__task_group_link" %>
  </div>
  <div class="shared__task_box">
    <label class="finish_checkbox">
      <%= check_box_tag 'finish', task.id, task.finish.present?, {class: "finish_checkbox_box", data: { task_id: task.id,finish_id: task.finish&.id }} %>
      <span class="finish_checkbox-DummyInput"></span>
      <h3 class="shared__task_content"><%= task.content %></h3>
      <div class="shared__task_type"><%= task.type.name %></div>
    </label>
    <div class="shared__task_show">
      <%= link_to "＞", task_path(task.id), class:"shared__task_show_link" %>
    </div>
  </div>
  <div class="shared__task_memo"><%= task.memo %></div>
</div>

