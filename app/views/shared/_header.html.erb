<header>
  <div class="header__box header__username">
  <% if user_signed_in? %>
    <%= link_to "#{current_user.username}のリマインダー", root_path %>
  <% end %>
  </div>
  <div class="header__box header__title">ソノウチ</div>
  <div class="header__box header__control">
    <% if user_signed_in? %>
    <div class="header__control_link_box">
      <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "header__control_link" %>
    </div>
    <% else %>
    <div class="header__control_link_box">
      <%= link_to "新規登録", new_user_registration_path, class: "header__control_link" %>
    </div>
    <div class="header__control_link_box">
      <%= link_to "ログイン", new_user_session_path, class: "header__control_link" %>
    </div>
    <% end %>
  </div>
</header>
